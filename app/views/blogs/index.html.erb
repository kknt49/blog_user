<div class="container">

  <div class = "title">
    <div class = "notice">
      <p><%= notice %></p>
    </div>

    <h1>ブログ一覧</h1>
    <table class = "table">
      <tr>
        <th>投稿者</th>
        <th>タイトル</th>
        <th>内容</th></th>
      </tr>
      <% @blogs.each do |blog| %>
      <tr>
        <td><%= User.find(blog.user_id).name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細', blog_path(blog.id), class: 'btn btn-success' %></td>
        
        <% if blog.user_id == current_user.id %>
          <td><%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-info' %></td>
          <td><%= link_to '削除', blog_path(blog.id), method: :delete , class: 'btn btn-danger',data: { confirm: '本当に削除していいですか？' } %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>


